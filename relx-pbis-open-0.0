/opt/pbis/bin/config RequireMembershipOf  $domain\\domain^admins $domain\\$ad_group1 $domain\\$ad_group2
#echo "%$domain_nb\\$ad_group1 ALL=(ALL) ALL" >>  /etc/sudoers.d/${cloud}_admin
echo "%$domain_nb\\$ad_group2 ALL=(ALL) ALL" >>  /etc/sudoers.d/${cloud}_admin
;;

